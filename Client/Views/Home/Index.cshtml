@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <a asp-controller="Salespeople" asp-action="Index">
        <input type="button" class="btn btn-primary" value="Display Salespeople" />
    </a>
    <a asp-controller="Products" asp-action="Index">
        <input type="button" class="btn btn-primary" value="Display Products" />
    </a>
    <a asp-controller="Customers" asp-action="Index">
        <input type="button" class="btn btn-primary" value="Display Customers" />
    </a>
    <a asp-controller="Sales" asp-action="Index">
        <input type="button" class="btn btn-primary" value="Display Sales" />
    </a>
    <a asp-controller="Sales" asp-action="Create">
        <input type="button" class="btn btn-primary" value="Create a Sale" />
    </a>
    <form asp-controller="CommissionReports" asp-action="Index">
        <label for="quarter">Quarter</label>
        <input type="text" id="quarter" name="quarter" />
        <label for="year">Year</label>
        <input type="text" id="year" name="year" />
        <input type="submit" value="See Commission Reports For Quarter And Year" />
    </form>
</div>
